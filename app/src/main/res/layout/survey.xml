<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:gravity="center"
            android:padding="16dp"
            android:text="Health Questionnaire"
            android:textColor="#FEFAFD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="201dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="660dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:text="1. Age: "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:hint="Please Type in a Number"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="662dp"
                    android:layout_height="73dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:text="2. Gender(Female or Male or Others): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/gender"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:hint="Please Type in Your Gender"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="660dp"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Height(cm): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/height"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:hint="Please Type in Your Height"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="664dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:text="4. Weight(kg): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:hint="Please Type in Your Weight"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="662dp"
                    android:layout_height="107dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:text="5. What is the nature of your daily work or study? (e.g., sedentary, physical labor, mixed): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q5"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="662dp"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:text="6. How would you rate your overall physical fitness? (Rate from 1 to 5, where 1 is very poor and 5 is excellent):  "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q6"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="660dp"
                    android:layout_height="92dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:text="7. How would you rate your endurance? (Rate from 1 to 5):  "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q7"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="658dp"
                    android:layout_height="109dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:text="8. How would you rate your flexibility? (e.g., can you easily touch your toes?) (Rate from 1 to 5): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q8"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="658dp"
                    android:layout_height="118dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:text="9. How would you rate your strength? (e.g., number of pull-ups you can perform or other metrics) (Rate from 1 to 5): "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q9"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="659dp"
                    android:layout_height="125dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:text="10. Do you often feel fatigued or lack energy? (Never/Sometimes/Often/Always): _____ "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <EditText
                        android:id="@+id/q10"
                        android:layout_width="531dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/finishButton"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Finish"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>


